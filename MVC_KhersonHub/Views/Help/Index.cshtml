@model UploadFile
@{
    <div class="registration">
        <div class="container">
            <div class="registration__row">
                <form asp-controller="Help" asp-action="Sended" method="post" enctype="multipart/form-data">
                    <input asp-for="FirstName" required placeholder="Прізвище" id="fname" />
                    <input asp-for="SurName" required placeholder="Ім'я" id="lname" />
                    <input asp-for="Patronymic" required  placeholder="По-батькові" id="sname" />
                    <input asp-for="Number" required  placeholder="Номер телефону" id="telephone" />
                    <input asp-for="IDP_number" required  placeholder="Номер довідки ВПО" maxlength="15" minlength="15" id="vpo" />
                    <input asp-for="Date" type="date" required  id="date" max="2023-03-21" />
                    <input asp-for="RegisteredResidence"  placeholder="Звідки ви виїхали?" id="home" />
                    <input asp-for="ActualResidence" required  placeholder="Фактичне місце проживання" id="actplace" />
                    <input asp-for="Number_of_children"  placeholder="Кількість дітей" min="0" value="0" id="children" />
                    <input asp-for="MyImage" />

                    <input type="submit" />







                </form>
            </div>
        </div>
    </div>
}
